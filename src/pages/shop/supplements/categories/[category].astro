---
import type { GetStaticPaths } from "astro";
import NavBreadCrumb from "@/modules/core/components/nav-bread-crumb.ui";
import supplementsApi from "@/modules/core/lib/supplements.api";
import ShopLayout from "@/modules/core/layouts/ShopLayout.astro";
import ProductCard from "@/modules/core/components/ProductCard.astro";

export const getStaticPaths = (async () => {
  const categories = await supplementsApi.getSupplementCategories();

  return categories.map((c) => ({
    params: { category: c.slug },
    props: { categorySlug: c.slug, categoryName: c.name },
  }));
}) satisfies GetStaticPaths;

const { categoryName } = Astro.props;

const supplements = await supplementsApi.getSupplementsByCategory(categoryName);
---

<ShopLayout title={categoryName}>
  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <NavBreadCrumb.Root>
      <NavBreadCrumb.Home />
      <NavBreadCrumb.Shop />
      <NavBreadCrumb.Supplements />
      <NavBreadCrumb.Page label={`CategorÃ­a - ${categoryName}`} />
    </NavBreadCrumb.Root>
    <header class="my-10">
      <h2 class="text-5xl font-bold">Suplementos de {categoryName}</h2>
    </header>
    <section>
      <ul
        class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6"
      >
        {supplements.map((supplement) => <ProductCard product={supplement} />)}
      </ul>
    </section>
  </main>
</ShopLayout>
