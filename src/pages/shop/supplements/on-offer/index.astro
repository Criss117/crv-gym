---
import supplementsApi from "@/modules/core/lib/supplements.api";
import NavBreadCrumb from "@/modules/core/components/nav-bread-crumb.ui";
import ShopLayout from "@/modules/core/layouts/ShopLayout.astro";
import ProductCard from "@/modules/core/components/ProductCard.astro";

const supplements = await supplementsApi.getOnOfferSupplements();
---

<ShopLayout title="Supplementos en oferta">
  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <NavBreadCrumb.Root>
      <NavBreadCrumb.Home />
      <NavBreadCrumb.Shop />
      <NavBreadCrumb.Page label="Supplementos en oferta" />
    </NavBreadCrumb.Root>
    <header class="my-10">
      <h2 class="text-5xl font-bold">Supplementos en oferta</h2>
    </header>
    <section>
      <ul
        class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6"
      >
        {supplements.map((supplement) => <ProductCard product={supplement} />)}
      </ul>
    </section>
  </main>
</ShopLayout>
