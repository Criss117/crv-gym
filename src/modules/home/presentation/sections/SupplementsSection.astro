---
import { ArrowRightIcon } from "lucide-react";
import { Button } from "@/modules/core/components/ui/button";
import supplementsApi from "@/modules/core/lib/supplements.api";
import ProductCard from "@/modules/core/components/ProductCard.astro";

const supplements = (await supplementsApi.getSupplements()).slice(0, 8);
---

<section id="supplements">
  <header class="w-full my-20">
    <h1 class="text-5xl font-bold text-center">Suplementos m√°s vendidos</h1>
  </header>
  <div
    class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6"
  >
    {supplements.map((supplement) => <ProductCard product={supplement} />)}
  </div>
  <div class="mt-5 flex justify-end">
    <a href="/shop/supplements" class="">
      <Button variant="link">
        Ver todos los suplementos <ArrowRightIcon className="ml-2 h-4 w-4" />
      </Button>
    </a>
  </div>
</section>
