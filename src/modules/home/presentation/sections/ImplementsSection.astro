---
import { ArrowRightIcon } from "lucide-react";
import { Button } from "@/modules/core/components/ui/button";
import implementsApi from "@/modules/core/lib/implements.api";
import ProductCard from "@/modules/core/components/ProductCard.astro";

const implementsData = (await implementsApi.getImplements()).slice(0, 8);
---

<section id="implements">
  <header class="w-full my-20">
    <h1 class="text-5xl font-bold text-center">Implementos m√°s vendidos</h1>
  </header>
  <div
    class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6"
  >
    {implementsData.map((product) => <ProductCard product={product} />)}
  </div>
  <div class="mt-5 flex justify-end">
    <a href="/shop/implements" class="">
      <Button variant="link">
        Ver todos los implementos <ArrowRightIcon className="ml-2 h-4 w-4" />
      </Button>
    </a>
  </div>
</section>
